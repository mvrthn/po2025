<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cargui.testContrl">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- 1.1 VBox: Lewa sekcja -->
    <VBox alignment="TOP_CENTER" minWidth="200" prefWidth="300" spacing="10.0" style="-fx-border-color: lightgray; -fx-padding: 10;">
        <padding>
            <Insets right="10.0" />
        </padding>

        <!-- Panel 1 -->
        <VBox spacing="5" style="-fx-border-color: gray; -fx-border-width: 1; -fx-padding: 5;" VBox.vgrow="ALWAYS">
            <Label text="Car" />
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Model:" />
                <TextField editable="false" promptText="Pole 1" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="RegNum:" />
                <TextField editable="false" promptText="Pole 2" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Weight:" />
                <TextField editable="false" promptText="Pole 3" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Speed:" />
                <TextField editable="false" promptText="Pole 4" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Button maxWidth="Infinity" text="Power ON" HBox.hgrow="ALWAYS" />
                <Button maxWidth="Infinity" text="Power off" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>

        <!-- Panel 2 -->
        <VBox spacing="5" style="-fx-border-color: gray; -fx-border-width: 1; -fx-padding: 5;" VBox.vgrow="ALWAYS">
            <Label text="Engine" />
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Name:" />
                <TextField editable="false" promptText="Pole 1" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Price:" />
                <TextField editable="false" promptText="Pole 2" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Weight:" />
                <TextField editable="false" promptText="Pole 3" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="RPM:" />
                <TextField editable="false" promptText="Pole 4" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Button maxWidth="Infinity" text="RPM UP" HBox.hgrow="ALWAYS" />
                <Button maxWidth="Infinity" text="RPM DOWN" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>

        <!-- Panel 3 -->
        <VBox spacing="5" style="-fx-border-color: gray; -fx-border-width: 1; -fx-padding: 5;" VBox.vgrow="ALWAYS">
            <Label text="Gearbox" />
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Name:" />
                <TextField editable="false" promptText="Pole 1" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Price:" />
                <TextField editable="false" promptText="Pole 2" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Weight:" />
                <TextField editable="false" promptText="Pole 3" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Gear:" />
                <TextField editable="false" promptText="Pole 4" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Button maxWidth="Infinity" text="Gear UP" HBox.hgrow="ALWAYS" />
                <Button maxWidth="Infinity" text="Gear DOWN" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>


        <!-- Panel 4 -->
        <VBox spacing="5" style="-fx-border-color: gray; -fx-border-width: 1; -fx-padding: 5;" VBox.vgrow="ALWAYS">
            <Label text="Clutch" />
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Name:" />
                <TextField editable="false" promptText="Pole 1" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Price:" />
                <TextField editable="false" promptText="Pole 2" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="Weight:" />
                <TextField editable="false" promptText="Pole 3" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label minWidth="50" text="State:" />
                <TextField editable="false" promptText="Pole 4" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <Button maxWidth="Infinity" text="Depress" HBox.hgrow="ALWAYS" />
                <Button maxWidth="Infinity" text="Release" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </VBox>

    <!-- 1.2 VBox: Prawa strona (Góra + Center) -->
    <VBox spacing="20.0" HBox.hgrow="ALWAYS">
        <!-- 1.2.1 Sekcja górna -->
        <HBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="10.0" />
            </padding>
            <ComboBox promptText="Choose car" />
            <Button text="Add" />
            <Button text="Delete" />
        </HBox>

        <!-- 1.2.2 Sekcja center -->
        <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
            <Label fx:id="welcomeText" />
        </VBox>
    </VBox>
</HBox>
